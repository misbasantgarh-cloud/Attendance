<body>

  <!-- Cadre Attendance -->
  <div class="card">
    <h3>üìç NRLM Cadre Attendance</h3>

    <input id="mobile" placeholder="Registered Mobile Number" />

    <div class="btn-row">
      <button class="in-btn" onclick="mark('IN')">Mark IN</button>
      <button class="out-btn" onclick="mark('OUT')">Mark OUT</button>
    </div>

    <div id="msg"></div>
  </div>

  <!-- BPM Dashboard -->
  <div class="card">
    <h3>üó∫Ô∏è BPM Live Dashboard</h3>
    <button class="map-btn" onclick="loadMap()">View Live Map</button>
    <div id="map"></div>
  </div>

<script>
/* ================= CONFIG ================= */
const API_URL = "PASTE_APPS_SCRIPT_URL_HERE";
/* ========================================= */

const msg = document.getElementById("msg");

function mark(type) {
  const mobile = document.getElementById("mobile").value.trim();

  if (!mobile) {
    msg.innerHTML = "‚ùå Enter mobile number";
    return;
  }

  msg.innerHTML = "üì° Getting location...";

  navigator.geolocation.getCurrentPosition(
    pos => {
      fetch(API_URL, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          action: "markAttendance",
          mobile: mobile,
          lat: pos.coords.latitude,
          lng: pos.coords.longitude,
          accuracy: pos.coords.accuracy,
          type: type
        })
      })
      .then(res => res.json())
      .then(data => {
        msg.innerHTML = data.status === "ok"
          ? "‚úÖ " + data.message
          : "‚ùå " + data.message;
      })
      .catch(() => msg.innerHTML = "‚ùå Server error");
    },
    () => msg.innerHTML = "‚ùå Location permission required",
    { enableHighAccuracy: true, timeout: 15000 }
  );
}

function loadMap() {
  fetch(API_URL, {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ action: "getMapData" })
  })
  .then(res => res.json())
  .then(rows => {
    if (!rows.length) {
      alert("No attendance data");
      return;
    }

    const map = new google.maps.Map(document.getElementById("map"), {
      zoom: 12,
      center: { lat: rows[0].lat, lng: rows[0].lng }
    });

    rows.forEach(r => {
      new google.maps.Marker({
        position: { lat: r.lat, lng: r.lng },
        map: map,
        label: r.name
      });
    });
  });
}
</script>

